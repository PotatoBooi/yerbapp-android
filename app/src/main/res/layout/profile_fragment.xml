<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewmodel"
            type="com.polsl.yerbapp.presentation.ui.profile.ProfileViewModel" />
    </data>



    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.ui.profile.ProfileFragment">



        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clProfile"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clProfileInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_margin="35dp">

                    <Button
                        android:id="@+id/btnLogout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="@{()->viewmodel.logoutClick()}"
                        android:padding="20dp"
                        android:text="@string/LOGOUT"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <TextView
                        android:id="@+id/tvUsername"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:text="@{viewmodel.username}"
                        android:textSize="20sp"
                        android:layout_marginBottom="5dp" />
                    <TextView
                        android:id="@+id/tvEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvUsername"
                        android:text="@{viewmodel.email}"
                        android:textSize="15sp"
                        android:drawableLeft="@drawable/ic_email"
                        android:drawableTint="@color/colorAccent"
                        android:drawablePadding="2dp"
                        android:layout_marginTop="5dp" />

            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.cardview.widget.CardView
                android:id="@+id/cvPreferences"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                card_view:cardCornerRadius="8dp"
                card_view:cardElevation="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_margin="30dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clPreferences"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="10dp">


                    <TextView
                        android:id="@+id/tvPreferences"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:text="@string/PREFERENCES"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:layout_marginBottom="30dp"
                        android:textColor="@color/slate_black" />

                    <TextView
                        android:id="@+id/tvAromaHeader"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/tvPreferences"
                        app:layout_constraintStart_toStartOf="@id/rbAroma"
                        android:text="@string/AROMA"
                        android:textSize="15sp" />

                    <RatingBar
                        android:id="@+id/rbAroma"
                        style="@style/PreferenceRating"
                        app:layout_constraintTop_toBottomOf="@id/tvAromaHeader"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numStars="5"
                        android:rating="@={viewmodel.aroma}"
                        android:stepSize="1"
                        android:layout_marginBottom="15dp"/>

                    <TextView
                        android:id="@+id/tvTasteHeader"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/rbAroma"
                        app:layout_constraintStart_toStartOf="@id/rbTaste"
                        android:text="@string/TASTE"
                        android:textSize="15sp" />

                    <RatingBar
                        android:id="@+id/rbTaste"
                        style="@style/PreferenceRating"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvTasteHeader"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numStars="5"
                        android:rating="@={viewmodel.taste}"
                        android:stepSize="1"
                        android:layout_marginBottom="15dp"/>

                    <TextView
                        android:id="@+id/tvEnergyHeader"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        app:layout_constraintTop_toBottomOf="@id/rbTaste"
                        app:layout_constraintStart_toStartOf="@id/rbEnergy"
                        android:text="@string/ENERGY"
                        android:textSize="15sp" />


                    <RatingBar
                        android:id="@+id/rbEnergy"
                        style="@style/PreferenceRating"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvEnergyHeader"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numStars="5"
                        android:rating="@={viewmodel.energy}"
                        android:stepSize="1"
                        android:layout_marginBottom="15dp"/>

                    <TextView
                        android:id="@+id/tvPriceHeader"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        app:layout_constraintTop_toBottomOf="@id/rbEnergy"
                        app:layout_constraintStart_toStartOf="@id/rbPrice"
                        android:text="@string/PRICE"
                        android:textSize="15sp" />


                    <RatingBar
                        android:id="@+id/rbPrice"
                        style="@style/PreferenceRating"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvPriceHeader"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numStars="5"
                        android:rating="@={viewmodel.price}"
                        android:stepSize="1"
                        android:layout_marginBottom="15dp"/>

                    <TextView
                        android:id="@+id/tvBitternessHeader"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        app:layout_constraintTop_toBottomOf="@id/rbPrice"
                        app:layout_constraintStart_toStartOf="@id/rbBitterness"
                        android:text="@string/BITTERNESS"
                        android:textSize="15sp" />

                    <RatingBar
                        android:id="@+id/rbBitterness"
                        style="@style/PreferenceRating"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvBitternessHeader"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numStars="5"
                        android:rating="@={viewmodel.bitterness}"
                        android:stepSize="1" />


                    <Button
                        android:id="@+id/btnSave"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="@{()->viewmodel.saveClick()}"
                        android:text="@string/SAVE"
                        app:layout_constraintTop_toBottomOf="@id/rbBitterness"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginTop="20dp"
                        android:padding="10dp"
                        style="@style/Widget.AppCompat.Button.Colored" />

                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clLogin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:tint="@color/cardview_dark_background">


            <fragment
                android:id="@+id/fragmentLogin"
                android:name="com.polsl.yerbapp.presentation.ui.profile.login.LoginFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:layout="@layout/login_fragment" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clLoading"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include layout="@layout/loading" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
